{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Checkpoint Exchange Documentation",
  "colors": {
    "primary": "#32CDCD",
    "light": "#32CDCD",
    "dark": "#32CDCD"
  },
  "favicon": {
    "light": "/images/checkpoint-symbol-dark.svg",
    "dark": "/images/checkpoint-symbol-light.svg"
  },
  "modeToggle": {
    "default": "dark",
    "isHidden": false
  },
  "layout": "sidenav",
  "navigation": {
    "groups": [
      {
        "group": "Get Started",
        "pages": [
          "index",
          "get-started/quickstart",
          "get-started/about-checkpoint"
        ]
      },
      {
        "group": "Checkpoint Products",
        "pages": [
          "core-products/index",
          "core-products/point-exchange",
          "core-products/point-aggregator",
          "core-products/point-oracle",
          "core-products/point-api",
          "core-products/point-tracking",
          "core-products/checkpoint-point-nfts"
        ]
      },
      {
        "group": "Architecture",
        "pages": [
          "architecture/index",
          "architecture/oracle-system",
          "architecture/points-tokenization",
          "architecture/market-trading",
          "architecture/program-settlement"
        ]
      },
      {
        "group": "Oracle API Reference",
        "openapi": "spec/oracle.json",
        "pages": ["api/oracle-api"]
      },
      {
        "group": "Points API Reference",
        "openapi": "spec/points.yaml",
        "pages": ["api/points-api"]
      }
    ]
  },
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "typescript", "python"],
      "defaults": "required",
      "prefill": true
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Checkpoint Exchange",
        "icon": "/images/checkpoint-symbol-neutral.svg",
        "href": "https://checkpoint.exchange"
      }
    ]
  },
  "logo": {
    "light": "/images/checkpoint-logo-dark.svg",
    "dark": "/images/checkpoint-logo-light.svg"
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "seo": {
    "indexHiddenPages": false,
    "metatags": {
      "canonical": "https://docs.checkpoint.exchange",
      "description": "Checkpoint docs: check, track, trade and tokenize points with secure, on-chain settlement.",
      "keywords": "checkpoint documentation, points aggregator, points checker, points exchange, points trading, loyalty points tokenization, tokenize rewards points, pre-token trading, point oracle, points API, crypto points marketplace, rewards points crypto, selling points, pre-tge trading",
      "robots": "index, follow",
      "googlebot": "index, follow",
      "viewport": "width=device-width, initial-scale=1.0",
      "referrer": "strict-origin-when-cross-origin",
      "theme-color": "#32CDCD",
      "color-scheme": "light dark",
      "og:title": "Checkpoint Documentation",
      "og:description": "Check, track, trade and tokenize points with secure, on-chain settlement.",
      "og:type": "website",
      "og:url": "https://docs.checkpoint.exchange",
      "og:image": "https://docs.checkpoint.exchange/images/Checkpoint_Docs_BG.jpg",
      "og:site_name": "Checkpoint",
      "twitter:card": "summary_large_image",
      "twitter:site": "@CheckpointEX",
      "twitter:title": "Checkpoint Documentation",
      "twitter:description": "Check, track, trade and tokenize points.",
      "twitter:image": "https://docs.checkpoint.exchange/images/Checkpoint_Docs_BG.jpg"
    }
  },
  "analytics": {
    "plausible": {
      "domain": "docs.checkpoint.exchange"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "cursor"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/0xportallabs",
      "github": "https://github.com/0xPortalLabs",
      "discord": "https://discord.gg/fJ5dJbxxTT",
      "telegram": "https://t.me/CheckpointExchange"
    }
  }
}
