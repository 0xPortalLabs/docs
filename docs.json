{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Checkpoint",
  "colors": {
    "primary": "#32CDCD",
    "light": "#32CDCD",
    "dark": "#32CDCD"
  },
  "favicon": {
    "light": "/images/checkpoint-symbol-dark.svg",
    "dark": "/images/checkpoint-symbol-light.svg"
  },
  "modeToggle": {
    "default": "dark",
    "isHidden": false
  },
  "layout": "sidenav",
  "navigation": {
    "groups": [
      {
        "group": "Get Started",
        "pages": ["index", "get-started/quickstart", "get-started/about-checkpoint"]
      },
      {
        "group": "Core Products",
        "pages": [
          {
            "group": "Checkpoint Products",
            "pages": [
              "core-products/index",
              "core-products/point-exchange",
              "core-products/point-aggregator",
              "core-products/point-oracle",
              "core-products/point-api",
              "core-products/point-tracking",
              "core-products/checkpoint-point-nfts"
            ]
          }
        ]
      },
      {
        "group": "Architecture",
        "pages": [
          "architecture/index",
          "architecture/oracle-system",
          "architecture/points-tokenization",
          "architecture/market-trading",
          "architecture/program-settlement"
        ]
      },
      {
        "group": "Integration Guides",
        "pages": ["technical-reference/how-to-deposit", "technical-reference/interact-with-market"]
      },
      {
        "group": "API Reference",
        "openapi": "spec/oracle.json",
        "pages": ["api/oracle-api"]
      }
    ]
  },
  "api": {
    "playground": {
      "display": "interactive",
      "proxy": true
    },
    "examples": {
      "languages": ["curl", "typescript", "python"],
      "defaults": "required",
      "prefill": true
    }
  },
  "topbarLinks": [
    {
      "name": "Community",
      "url": "https://discord.gg/fJ5dJbxxTT"
    }
  ],
  "topbarCtaButton": {
    "type": "github",
    "url": "https://github.com/0xPortalLabs/checkpoint-v2-contracts"
  },
  "anchors": [
    {
      "name": "Portal Dashboard",
      "icon": "rocket",
      "url": "https://0xportal.io",
      "color": "#32CDCD"
    },
    {
      "name": "GitHub",
      "icon": "github",
      "url": "https://github.com/0xPortalLabs/checkpoint-v2-contracts",
      "color": "#32CDCD"
    },
    {
      "name": "Discord",
      "icon": "discord",
      "url": "https://discord.gg/fJ5dJbxxTT",
      "color": "#32CDCD"
    }
  ],
  "logo": {
    "light": "/images/checkpoint-logo-dark.svg",
    "dark": "/images/checkpoint-logo-light.svg",
    "href": "https://checkpoint.exchange"
  },
  "search": {
    "prompt": "Search documentation..."
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "seo": {
    "indexHiddenPages": false
  },
  "analytics": {
    "plausible": {
      "domain": "docs.checkpoint.exchange"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "perplexity", "cursor"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/0xportallabs",
      "github": "https://github.com/0xPortalLabs",
      "discord": "https://discord.gg/fJ5dJbxxTT",
      "telegram": "https://t.me/CheckpointExchange"
    }
  },
  "backgroundImage": "/images/checkpoint-logo-dark.svg"
}
